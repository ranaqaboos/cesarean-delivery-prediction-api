{
	"display": "Node 16",

	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2021",

		"outDir": "dist",

		"strict": true,
		"alwaysStrict": true,

		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
